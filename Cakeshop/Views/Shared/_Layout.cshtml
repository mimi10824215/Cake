<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Menugo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Cakeshop.styles.css" asp-append-version="true" />
</head>
<body>
    <header>

        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">

                <a class="navbar-brand" href="index.html">
                    <img src="~/Icons/Menugogo.png" alt="" width="70">
                </a>


                <button class="navbar-toggler ms-auto" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>


                <div class="collapse navbar-collapse" id="navbarSupportedContent">

                    <h1>Menugo點餐系統</h1>
                    <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" asp-controller="Home" asp-action="Index">
                                <i class="fa-solid fa-home"></i> 首頁
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-action="Index" asp-controller="Cakes"><i class="fa-solid fa-utensils"></i> 點餐</a>
                            
                        </li>          
                        <li class="nav-item">
                            <a class="nav-link" href="#"><i class="fa-regular fa-address-book"></i> 關於我們</a>
                        </li>
                    
                      
                      
                    </ul>
                </div>
                <partial name="_LoginPartial" />
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="container">
            <div class="row">
                <div class="col order-first">
                    <img src="~/Icons/Menugogo.png" alt="" width="150">
                </div>
                <div class="col">
                    <h4>官網連結</h4>
                    <ul>
                        <li><a href="#"><i class="bi bi-facebook text-primary"></i> facebook</a></li>
                        <li><a href="#"><i class="bi bi-instagram text-success"></i> instagram</a></li>
                        <li><a href="#"><i class="bi bi-youtube text-danger"></i> youtube</a></li>
                    </ul>
                </div>
                <div class="col">
                    <h4>網站地圖</h4>
                    <ul>
                        <li><a class="nav-link active" asp-controller="Home" asp-action="Index">>首頁</a></li>
                        <li><a class="nav-link active" asp-controller="Home" asp-action="Index">>最新消息</a></li>
                    </ul>
                </div>
                <div class="col order-last">
                    <h4>聯繫我們</h4>
                    <p>
                        地址:彰化縣XXxxxxxx<br>
                        電話:0909888888<br>
                        E-Mail:<a href="mailto:worldpeace0401@gmail.com">world@gmail.com</a>
                    </p>
                </div>
            </div>
        </div>
    </footer>


    <script src="~/js/site.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
